    <button id="darkModeToggle">Toggle Dark Mode</button>

    <script>
        // ScrollReveal initialization for smooth appearance
        ScrollReveal().reveal('.profile', { delay: 500, distance: '50px', origin: 'top' });
        ScrollReveal().reveal('.about', { delay: 500, distance: '50px', origin: 'bottom' });
        ScrollReveal().reveal('.skills', { delay: 500, distance: '50px', origin: 'right' });
        ScrollReveal().reveal('.projects', { delay: 500, distance: '50px', origin: 'left' });
        ScrollReveal().reveal('.contact', { delay: 500, distance: '50px', origin: 'top' });

        // Dark Mode Toggle
        const toggleButton = document.getElementById('darkModeToggle');
        toggleButton.addEventListener('click', () => {
            const body = document.body;
            const isDarkMode = body.style.backgroundColor === 'black';

            if (isDarkMode) {
                body.style.backgroundColor = 'white';
                body.style.color = 'black';
                toggleButton.style.backgroundColor = '#000';
                toggleButton.style.color = 'white';
            } else {
                body.style.backgroundColor = 'black';
                body.style.color = 'white';
                toggleButton.style.backgroundColor = '#007BFF';
                toggleButton.style.color = 'white';
            }
        });
    </script>
